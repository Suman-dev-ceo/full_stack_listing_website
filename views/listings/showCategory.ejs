<% layout('/layouts/boilerplate') %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let categoryListing of categoryListings ){ %>
        <a href="/listings/<%=categoryListing._id%>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%=categoryListing.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%= categoryListing.title %> <br>
                        </b>
                        &#8377; <%= categoryListing.price.toLocaleString('en-IN') %> / night
                            <i class="taxInfo">&nbsp; &nbsp; +18 % GST</i>
                    </p>
                </div>
            </div>
        </a>
        <%} %>
</div>